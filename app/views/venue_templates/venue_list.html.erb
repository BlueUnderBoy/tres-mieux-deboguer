<h1>List of venues</h1>

<form action="/insert_venue_record" method="post">
  <label for="address">Address</label>
  <input id="address" type="text" name="address" placeholder="Enter an address...">
  
  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="Enter a name...">
  
  <label for="neighborhood">Neighborhood</label>
  <input id="neighborhood" type="text" name="neighborhood" placeholder="Enter a neighborhood...">

  <button>Add venue</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Address
    </th>

    <th>
      Name
    </th>

    <th>
      Neighborhood
    </th>

    <th></th>
  </tr>

  <% @venues.each do |venue| %>
  <tr>
    <td>
      <%= venue.id %>
    </td>
    <td>
      <%= venue.address %>
    </td>
   
    <td>
      <%= venue.name %>
    </td>
   
    <td>
      <%= venue.neighborhood %>
    </td>

    <td>
      <a href="/venues/<%= venue.id %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>
